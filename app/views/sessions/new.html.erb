<%= form_with(url: session_path,
              class: "mx-auto my-12 w-1/3 p-8 shadow border border-slate-300 rounded bg-white") do |f| %>
  <p>
    <%= f.label :email, class: "block" %>
    <%= f.email_field :email, autofocus: true, class: "w-full" %>
  </p>
  <p>
    <%= f.label :password, class: "block" %>
    <%= f.password_field :password, class: "w-full" %>
  </p>

  <p><%= f.submit "Sign in", class: "button" %></p>
<% end %>
